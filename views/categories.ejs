    <!-- ABOUT PAGE -->
       <!-- Grid Container -->
       <h2 class="category-item">Vegetables</h2>
  <div class="grid-container">
    <% vegetables.forEach(product => { %>
      <!-- Product Grid Item -->
      <div class="grid-item">
        <img class="vegetable-img" src="<%= product.image %>" alt="<%= product.name %>">
        <div class="category-item"><%= product.name %></div>
        <div class="category-price">$<%= product.price.toFixed(2) %></div>
        <button class="product-item">Add to Cart</button>
      </div>
    <% }); %>
  </div>

